extends template 

block content
    h1 Your Trips
    h3 Kathmandu
    //- p= new Date(article.CheckIn).toDateString() + '   -   ' + new Date(article.CheckOut).toDateString()
    each booking in bookings
        br
        .card
            .card-header
                | Karma Hotel Nepal
            .card-body
                blockquote.blockquote.mb-0
                p= new Date(booking.CheckIn).toLocaleDateString('en-US', { timeZone: 'UTC' }) + '  -  ' + new Date(booking.CheckOut).toLocaleDateString('en-US', { timeZone: 'UTC' })
                footer.blockquote-footer
                    | Confirmed
                

